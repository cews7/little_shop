<!DOCTYPE html>
<html>
  <head>
    <title>Mini Market</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
  <nav class="navbar default-navbar" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a> <%= link_to image_tag("minimarket-logo.png", border: 0), root_path, class: "navbar-brand" %></a>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">


         <li class="navbar-link", id="btn_categories"><%= link_to "Categories", categories_path %></li>
         <li class="navbar-link"><%= link_to "Items", items_path %></li>
         <% if current_user %>
           <li class="navbar-link"><%= link_to "Logout", logout_path %></li>
         <% else %>
           <li class="navbar-link"><%= link_to "Log In | Sign Up", login_path %></li>
         <% end %>
         <li class="navbar-link"><%= link_to "Cart (#{count(@cart_items)})", cart_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-left">
          <form class="navbar-form navbar-left">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search for...">
              <span class="input-group-btn">
                <button class="btn btn-danger" type="button">Go!</button>
              </span>
            </div><!-- /input-group -->
          </form>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
    <% end %>
  </div>

    <%= yield %>

</html>
