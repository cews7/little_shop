<div class="container">

  <div class="col-lg-12">
    <h1 class="page-header">Manage Items</h1>
  </div>

  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <tr>
          <th style="width:50%"><%= "Product" %></th>
          <th style="width:30%"><%= "Status" %></th>
          <th style="width:20%"><%= "Actions" %></th>
    		</tr>
      </tr>
    </thead>
    <tbody>
    <% @items.each do |item| %>
    <tr>
      <td data-th="Product">
        <div class="row">
          <div class="col-sm-2 hidden-xs">
            <img><%= image_tag item.image, class: "img-responsive" %></img>
          </div>
          <div class="col-sm-10">
            <h3 class="nomargin"><%= link_to item.title, items_path(item) %></h3>
            <p><%= item.description %></p>
          </div>
        </div>
      </td>
      <td data-th="Status">
        <% if item.retired? %>
          <p><%= "retired" %></p>
        <% else %>
          <p><%= "active" %></p>
        <% end %>
      </td>
      <td class="Actions" data-th="">
        <a><%= button_to "Edit", edit_admin_item_path(item), class:"btn btn-primary" %></a>
      </td>
      <% end %>
    </tr>
  </tbody>
  </table>

</div>
