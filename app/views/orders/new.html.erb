<div class="container">

  <div class="col-lg-12">
    <h1 class="page-header">Please Confirm Your Order</h1>
  </div>

  <div class="col-lg-12">
    <h3> Shipping Information </h3>
    <h4> Name: <%= @info.name %> </h4>
    <h4> Address: <%= @info.address %> </h4>
    <h4> City: <%= @info.city %> </h4>
    <h4> State: <%= @info.state %> </h4>
    <h4> Postal Code: <%= @info.postal_code %> </h4>
    <h4> Country: <%= @info.country %> </h4>
  </div>

  <table class="table table-hover table-condensed">
  	<thead>
  		<tr>
        <th class="col-sm-6"><%= "Item" %></th>
        <th class="col-sm-2"><%= "Price" %></th>
        <th class="col-sm-2"><%= "Quantity" %></th>
        <th class="col-sm-2"><%= "Subtotal" %></th>
  			<th class="col-sm-2" class="text-center"></th>
  		</tr>
  	</thead>
  	<tbody>
      <% @items.each do |order_item| %>
  		<tr>
  			<td data-th="Product">
  				<div class="row">
  					<div class="col-sm-2 hidden-xs">
              <img><%= image_tag order_item.image, class: "img-responsive" %></img>
            </div>
  					<div class="col-sm-10">
  						<h3 class="nomargin"><%= link_to "#{order_item.title}", item_path(order_item.id) %></h3>
              <p><%= order_item.description %></p>
  					</div>
  				</div>
  			</td>
  			<td data-th="Price"><%="$#{order_item.price}" %></td>
        <td data-th="Quantity"><%= @items.count %></td>
        <td data-th="Subtotal"><%= "$#{subtotal(order_item.price, order_item.quantity)}" %></td>
        <% end %>
  		</tr>
  	</tbody>
    <td class="col-lg-2 col-lg-pull-5"><strong>Order Total: <%= "$#{total_for_order(@items)}" %></strong></td>
  	<tfoot>
  		<tr class="visible-xs">
  		</tr>
  		<tr>
        <td colspan="2" class="hidden-xs"></td>
        <td><a><%= button_to "Confirm", orders_path, class: "btn btn-primary btn-large btn-block" %></a></td>
        <td><a><%= link_to "Edit Shipping Information", new_info_path, class: "btn btn-warning btn-block" %></a></td>
  			<td colspan="2" class="hidden-xs"></td>
  		</tr>
    </div>
  	</tfoot>
  </table>
</div>
