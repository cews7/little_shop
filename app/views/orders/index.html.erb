<div class="container">
  <div class="col-lg-12">
    <h1 class="page-header">Order History</h1>
  </div>
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th class="col-sm-6"><%= "View Order" %></th>
        <th class="col-sm-2"><%= "Order Number" %></th>
        <th class="col-sm-2"><%= "Status" %></th>
        <th class="col-sm-2"><%= "Quantity" %></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>  		<tr>
        <td data-th="Product">
          <div class="row">
            <div class="col-sm-6 text-centered">
              <%= link_to "View Order", order_path(order.id), class: "btn btn-primary btn-large btn-block" %>
            </div>
          </div>
        </td>
        <td data-th"Order ID"><h3><%= order.id %></h3>
        <td data-th"Status" class="text-center"><h3><%= order.status %></h3></td>
        <td data-th="Created_at" class="text-center"><h3><%= order.created_at %></h3></td>
        <% end %>
      </tr>
    </tbody>
    <tfoot>
      <tr class="visible-xs">
        <td class="text-center">
        </td>
      </tr>
      <tr>
        <td colspan="2" class="hidden-xs"></td>
      </tr>
    </tfoot>
  </table>
  <%= link_to "Continue Shopping", items_path, class: "btn btn-warning col-sm-2" %>
</div>
