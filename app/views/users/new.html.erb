<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password_digest %>

  <%= f.label "Confirm Password" %>
  <%= f.password_field :password_digest_confirmation %>

  <%= f.submit "Create Account!", class:"btn btn-primary" %>
<% end %>

