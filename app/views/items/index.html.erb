<div class="container">
  <div class="row">

  <div class="col-lg-12">
    <h1 class="page-header">All Items</h1>
  </div>

  <% @items.each do |item| %>
    <div class="col-md-3 col-sm-6 text-center item-container thumb">
      <h3><%= item.title %></h3>
      <p><%= item.description %></p>
      <p><%= "$#{item.price}" %></p>
      <%= image_tag(item.image, class: 'item-image img-responsive') %>
      <a><%= button_to "Add to Cart", cart_items_path(item_id: item.id), class:"btn btn-primary" %></a>
    </div>
  <% end %>

  </div>
</div>
