<div class="container">
	<div class="row">
      <fieldset>
      <legend>Add Shipping Information</legend>

      <%= form_for @info do |f| %>
        <div class="form-group">
          <%= f.label :name, "Name:", class: "col-md-4 control-label" %>
          <div class="col-md-4">
          <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :address, "Address:", class: "col-md-4 control-label" %>
          <div class="col-md-4">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :city, "City:", class: "col-md-4 control-label" %>
          <div class="col-md-4">
            <%= f.text_field :city, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :state, "State/Province:", class: "col-md-4 control-label" %>
          <div class="col-md-4">
            <%= f.text_field :state, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :postal_code, "Postal Code:", class: "col-md-4 control-label" %>
          <div class="col-md-4">
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :country, "Country:", class: "col-md-4 control-label" %>
          <div class="col-md-4">
            <%= f.text_field :country, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-4 control-label" for="singlebutton"> </label>
          <div class="col-md-4">
            <%= f.submit "Complete Checkout", class: "btn btn-primary" %>
        </div>
        </div>

      </fieldset>
    <% end %>
	</div>
</div>
