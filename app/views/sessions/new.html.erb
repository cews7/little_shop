<div class="container">
  <div class="row">
    <fieldset>
      <legend>Login</legend>
      <%= form_for(:session, url: login_path, :html => {:class => "form-horizontal center"}) do |f| %>
      <div class="form-group">
        <%= f.label :email, "Email:", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, "Password:", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-4 control-label" for="singlebutton"> </label>
        <div class="col-md-4">
          <%= f.submit "Login", class:"btn btn-primary" %>
        </div>
      </div>
    </fieldset>
    <% end %>

    <div class="row">
      <div class=" text-center">
        <%= link_to "New? Create an Account!", new_user_path, class:"btn btn-info login-btn" %>
      </div>
    </div>

  </div>
</div>
