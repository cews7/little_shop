<!-- Header -->
<header class="welcome-banner">
  <div class="headline">
    <% if current_user %>
    <h1>Welcome to the Mini Market, <%= current_user.name %>!</h1>
    <% else %>
    <h1>Welcome to the Mini Market!</h1>
    <% end %>
    <h3>We specialize in all things small, tiny, diminuative, little, and of course, mini.</h3>
    <a id="singlebutton" name="singlebutton" class="btn btn-danger btn-large" href="">Browse Items by Category</a>
  </div>
</header>

<div class="container">
  <div class="row">

    <div class="page-header">
      <h2>Featured Items</h2>
    </div>
  </div>

    <div id="featured-items" class="row list-group">

      <% @items.each do |item| %>
        <div class="item col-xs-4 col-lg-4">
          <div class="thumbnail">
            <%= image_tag(item.image, class: 'img-responsive') %>
            <div class="caption">
              <h3 class="item-title"><%= item.title %></h3>
              <p class="item-description"><%= item.description %></p>
              <div class="row">
                <div class="col-xs-12 col-md-6">
                  <p class="item-price"><%= "$#{item.price}" %></p>
                </div>
              </div>
              <div class="row">
                <div class="item-cart-btn">
                  <% if item.retired? %>
                    <p> Item Retired </p>
                  <%else %>
                    <a><%= button_to "Add to Cart", cart_items_path(item_id: item.id), class:"btn btn-primary btn-large btn-block" %></a>
                 <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>

</div>
