<div class="container">

  <h1 class="page-header"><%= @items.first.category.title %></h1>

  <% @items.each do |item| %>
    <div class="item col-xs-4 col-lg-4">
      <div class="thumbnail">
        <%= image_tag(item.image, class: 'img-responsive') %>
        <div class="caption">
          <h3 class="item-title"><%= link_to "#{item.title}", item_path(item.id) %></h3>
          <p class="item-description"><%= item.description %></p>
          <div class="row">
            <p class="item-price"><%= "$#{item.price}" %></p>
          </div>
          <div class="row">
            <div class="item-cart-btn">
              <% if item.retired? %>
                <a class="btn btn-danger btn-large btn-block disabled">Item Retired</a>
              <%else %>
                <a><%= button_to "Add to Cart", cart_items_path(item_id: item.id), class:"btn btn-primary btn-large btn-block" %></a>
             <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
