<div class="container">

  <h1 class="page-header">All Items</h1>
  <% @categories.each do |category| %>
    <div class="col-md-3 col-sm-6 text-center item-container thumb">
      <div class="thumbnail">
        <%= link_to image_tag("#{category.image}"), category_items_path(category.id)  %>
        <div class="caption">
          <%= link_to category.title, category_items_path(category.id) %><br />
        </div>
      </div>
    </div>
    <% end %>
</div>
